<view class="container">
  <view class="paper">
    <view class="paper_content" >
        <view class="paper_top">
            <view class="section">
            <view class="note_date">
            时间
                <picker mode="date" value="{{date}}" start="2017-01-01" end="{{enddate}}" bindchange="bindDateChange">
    <view class="picker">
      {{date}}
    </view>
  </picker>
            </view>
             <view class="note_weather">
            天气
                <picker mode="selector" value="{{index}}"  range="{{weather}}" bindchange="bindPickerChange">
    <view class="picker" >
      {{weather[index]}}
    </view>
  </picker>
            </view>
            </view>
        <view class="section title" style="border-bottom:1px solid #000;">
<text>标题</text>
<input maxlength="20" placeholder="请输入标题" placeholder-style="font-size:35rpx;"/>
        </view>
        </view>

<textarea class="maintext" bindblur="bindTextAreaBlur"  placeholder="正文开始" placeholder-style="font-size:35rpx;" maxlength="-1" style="font-size:30rpx;" value="{{value}}"/>
    </view>
    <view class="btngroup">
        <navigator url="url" class="savebtn"></navigator>
        <icon class="icon_pic" />
        <icon class="icon_color" />
        <icon class=""/>
        <icon class="icon_size" />
        <icon class="icon_clear" bindtap="toClear"/>
    </view>
  </view>
  
</view>