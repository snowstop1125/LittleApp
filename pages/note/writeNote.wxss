/* pages/note/writeNote.wxss */
/*页面内容*/
.container{height:100vh;background:#f1f1f1;justify-content:inherit;
}
.paper{position:relative;width:93%;height:94%;background:#fff;border: 1px solid #000;margin-top:25rpx;box-shadow: 0 2px 0 rgba(0, 0, 0, 0.39);display:flex;


}
.paper_content{height:calc(100% - 75rpx);padding:20rpx 35rpx 0;
}

/*下排按键*/
.paper .btngroup{position: absolute;width: 100%;height:80rpx;border-top:1px solid #000;bottom:0;left:0;display: flex;}
.paper .btngroup .savebtn{width:120rpx;height:120rpx;border-radius: 50%;border: 1px solid #000;position: absolute;bottom: 0;left: 50%;margin-left:-60rpx;
background: url("../../image/note_save.png") no-repeat center #50c298;background-size: 60%;}
.paper .btngroup icon{width: 25%;height: 100%;}
.icon_pic{background: url("../../image/note_pic.png") no-repeat center;background-size: 40%;}
.icon_color{background: url("../../image/note_color.png") no-repeat center;background-size: 40%;}
.icon_size{background: url("../../image/note_size.png") no-repeat center;background-size: 40%;}
.icon_clear{background: url("../../image/note_clear.png") no-repeat center;background-size: 40%;}



/*上方主题*/
.paper_top{width:100%;padding:0 10rpx;}
.paper_top .section{display: flex;}
.paper_top .section>view{width:50%;font-size:35rpx;
}
.note_date{display: flex;}
.picker{margin-left:20rpx;
padding:0 5rpx 5rpx;
border-bottom:1px solid #000;text-align: center;
}
.note_weather{display: flex;}
.title text{width:14%;}
.title textarea{width:86%;}

.maintext{width:100%;height:400rpx;}