.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.Tool_list li{width:20rpx;height:20rpx;background:#ff5a5f;
color:#fff;
margin:5px;
}
.top_content{height:140rpx;
display:flex;background:#000;flex-direction:column;
align-items:center;
}
.top_content .login {
width:100rpx;
height:100rpx;
margin:20rpx;
border-radius:50%;
}
.section__title{text-align:center;
font-size:30rpx;
color:#9d9d9d;margin-top:40rpx;

}
.flex-wrp .flex-item{width:650rpx;
height:180rpx;
margin:35rpx;
color:#fff;
background:#000;
border-radius:15rpx;
box-shadow:1px 1px 1px #ccc;
}
.flex-wrp .flex-item navigator{width:100%;height:100%;
}
.flex-item .l_icon{width:200rpx;height:100%;float: left;}
.flex_item_icon1{background:url("https://raw.githubusercontent.com/snowstop1125/LittleApp/master/image/index_note.png") no-repeat center;}
.flex_item_icon2{background:url("https://raw.githubusercontent.com/snowstop1125/LittleApp/master/image/index_money.png") no-repeat center;}
.flex_item_icon3{background:url("https://raw.githubusercontent.com/snowstop1125/LittleApp/master/image/index_wait.png") no-repeat center;}
.flex-wrp .flex-item text{float: left;font-size:35rpx;line-height:180rpx;}
.flex-wrp .flex-item .r_icon{float:right;margin:60rpx 20rpx 0 0;
display: flex;
}
.flex-wrp .flex-item .r_icon view{min-width:50rpx;
height:50rpx;color: #50c298;
background:#32936f;
border-radius:50%;text-align: center;margin:5rpx;
font-size:28rpx;
line-height:50rpx;
}
.flex-wrp .flex-item .r_icon2 view{background:#ad9d47;}